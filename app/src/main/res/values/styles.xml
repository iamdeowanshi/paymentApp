<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/blue_dark</item>
        <item name="android:actionMenuTextColor">@color/blue_light</item>
        <item name="android:actionMenuTextAppearance">@style/menuTitleTheme</item>
    </style>

    <style name="tab_layout_font_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/blue_dark</item>
        <item name="colorControlNormal">@color/blue_dark</item>
        <item name="colorControlActivated">@color/blue_dark</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:dropDownSelector">@drawable/keyboard_arrow_down</item>
    </style>

    <style name="SpinnerTheme.DropDown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="menuTitleTheme">
        <item name="android:textSize">@dimen/text_size_18_to_pix</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <item name="android:colorPrimaryDark">@color/sky_blue_dark</item>
    </style>

</resources>
