<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.batua.android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".app.BatuaApplication"
        android:allowBackup="true"
        android:icon="@drawable/img_batua_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity android:name=".ui.activity.ForgotPasswordActivity">
        </activity>
        <activity android:name=".ui.activity.OtpActivity">
        </activity>
        <activity android:name=".ui.activity.ResetPasswordActivity">
        </activity>
		<activity android:name=".ui.activity.HomeActivity">
        </activity>
        <activity android:name=".ui.activity.AddMerchantActivity">
        </activity>
        <activity android:name=".ui.activity.EditMerchantActivity">
        </activity>
    </application>

</manifest>
