<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.batua.android.user">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".app.BatuaUserApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.MobileNumberActivity">
        </activity>
        <activity android:name=".ui.activity.OtpActivity">
        </activity>
        <activity android:name=".ui.activity.ResetPasswordActivity">
        </activity>
        <activity android:name=".ui.activity.HomeActivity">
        </activity>
        <activity
            android:name=".ui.activity.PrePaymentConfirmationActivity"
            android:theme="@style/BlueTheme"
            android:windowSoftInputMode="adjustUnspecified">
        </activity>
        <activity
            android:name=".ui.activity.ReviewActivity"
            android:theme="@style/BlueTheme">
        </activity>
        <activity
            android:name=".ui.activity.PaymentActivity"
            android:theme="@style/BlueTheme"/>
        <activity android:name=".ui.activity.WalletActivity">
        </activity>
        <activity android:name=".ui.activity.ProfileActivity">
        </activity>
        <activity android:name=".ui.activity.SetPinActivity">
        </activity>
        <activity android:name=".ui.activity.EditProfileActivity">
        </activity>
        <activity android:name=".ui.activity.ChangePinActivity">
        </activity>
        <activity android:name=".ui.activity.ChangePasswordActivity">
        </activity>
        <activity android:name=".ui.activity.ContactUsActivity">
        </activity>
        <activity android:name=".ui.activity.TransactionHistoryActivity">
        </activity>
        <activity
            android:name=".ui.activity.PaymentSuccessActivity"
            android:theme="@style/PaymentStatus"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".ui.activity.PaymentFailureActivity"
            android:theme="@style/PaymentStatus">
        </activity>
        <activity android:name=".ui.activity.WalletRechargeActivity">
        </activity>
        <activity android:name=".ui.activity.PinLoginActivity">
        </activity>
    </application>

</manifest>
